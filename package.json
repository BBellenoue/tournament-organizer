{
  "name": "tournament-organizer",
  "version": "3.3.0",
  "description": "JavaScript library for running tournaments",
  "exports": {
    ".": {
      "browser": "./dist/index.module.js",
      "umd": "./dist/index.umd.js",
      "import": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.js",
  "files": [
    "dist/**/*"
  ],
  "type": "module",
  "engines": {
    "node": ">=14.16"
  },
  "scripts": {
    "build": "rm -rf dist/* && tsc -p tsconfig.json && rollup --config rollup.es.config.ts --configPlugin typescript && rollup --config rollup.umd.config.ts --configPlugin typescript"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/slashinfty/tournament-organizer.git"
  },
  "keywords": [
    "tournament",
    "pairings",
    "scorekeeping",
    "swiss",
    "round robin",
    "single elimination",
    "double elimination"
  ],
  "author": "Matt Braddock",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/slashinfty/tournament-organizer/issues"
  },
  "homepage": "https://github.com/slashinfty/tournament-organizer/blob/main/DOCS.md",
  "dependencies": {
    "randomstring": "^1.3.0",
    "tournament-pairings": "^1.5.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-typescript": "^11.1.3",
    "@types/randomstring": "^1.1.8",
    "rollup": "^3.28.1",
    "rollup-plugin-polyfill-node": "^0.12.0",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2"
  }
}
